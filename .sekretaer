agent:
  name: "Commander and Agent Sekretær"
  type: "directory_assistant"
  description: "Hjælper med Commander and Agent projekt"

permissions:
  - read_files
  - git_operations
  - run_scripts

kommandoer:
  - bibliotekar

shortcuts:
  - name: "status"
    command: "git status"
    description: "Git status"

  - name: "todo"
    command: "find . -name '*TODO*' -type f"
    description: "Find TODO filer"

  - name: "intro"
    command: "cat INTRO/README.md 2>/dev/null || echo 'Ingen INTRO README'"
    description: "Vis INTRO README"

context:
  project: "commander-and-agent"
  databases: []

  key_paths:
    - "INTRO/ - Project documentation"
